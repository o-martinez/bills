        var n = description.search(c);
        if (n != -1){
           // gs.print(description);
           // gs.print(n);
           // gs.print(c);
           // gs.print(t);
           // gs.print("----*******-----");
            grBills.category = t;
            grBills.update();
            break;
        }
        
    }
}
	

var cats = [];
var type = [];
// populate the array
while (grCategory.next()){
    type.push(grCategory.getValue("type").toLowerCase());
    cats.push(grCategory.getValue("category").toLowerCase());
}
var grBills = new GlideRecord('x_391849_bills_nordy');
grBills.query();

while (grBills.next()){
	// gs.addInfoMessage("Hello, is this working?");
